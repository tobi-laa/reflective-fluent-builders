{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": ["on saturday"],
  "packageRules": [
    {
      "description": "Automatically merge minor and patch-level updates when checks pass, grouped into a single branch",
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true,
      "automergeType": "branch",
      "groupName": "all non-major updates"
    },
    {
      "description": "Group all major updates into a single PR once per week",
      "matchUpdateTypes": ["major"],
      "groupName": "all major updates"
    }
  ],
  "ignorePaths": ["**/src/it/resources/**"]
}
